{
  "addons": [
    "heroku-postgresql:hobby-basic"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "description": "",
   "env": {
    "STAGING_DATABASE_URL": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    }
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "numbers",
  "scripts": {
      "postdeploy": "pg_dump $STAGING_DATABASE_URL | psql $DATABASE_URL && bundle exec rake db:migrate"
  },
  "stack": "heroku-18"
}
