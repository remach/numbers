{
  "addons": [
    "heroku-postgresql:hobby-basic"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "description": "",
   "env": {
    "STAGING_DATABASE_URL": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    }
   },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "numbers",
  "scripts": {
      "pr-predestroy": "pg_dump -Fc --no-acl --no-owner  $STAGING_DATABASE_URL | pg_restore -d $DATABASE_URL && python ./manage.py migrate"
  },
  "stack": "heroku-18"
}
